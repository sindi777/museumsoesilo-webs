generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model admin {
  id             Int      @id @default(autoincrement())
  name           String   @unique
  email          String
  password       String
  createdAt DateTime @default(now())
}

model Koleksi {
  id        Int    @id @default(autoincrement())
  nama      String
  deskripsi String
  detail    String?
  gambar    String
  pembuat   String?
  tahun     String?
}

model Pesan {
  id        Int      @id @default(autoincrement())
  isi       String
  createdAt DateTime @default(now())
}
